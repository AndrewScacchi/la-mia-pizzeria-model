<h1>Home</h1>

@*Initializing Model of Post*@
@model List<Pizza>

@if(Model.Count() == 0){

   <h3 class="text-center">Non sono presenti Pizza nel Database</h3>
}else{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrizione</th>
                <th>Prezzo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                    @*The code in the href grab the id from the specific post to create a unique url*@                    
                    <td><a href="@Url.Action("Detail",new {id = pizza.Id})">@pizza.Id</a></td>
                    <td class="title">@pizza.Name</td>
                    <td class="description">
                        @pizza.Description
                    </td>
                    <td class="price">
                        @pizza.Price €
                    </td>
                    <td>
                        <a class="btn btn-info" asp-area="" asp-controller="Pizza" asp-action="Detail" asp-route-id="@pizza.Id">Dettagli Pizza</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}